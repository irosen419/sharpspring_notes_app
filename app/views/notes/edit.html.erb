<div class="container new-post">
  <h3 class="display-4 text-center mt-5">How would you like to edit?</h3>
  <div id="edit-note-form">
    <%= render 'errors' %>
    
    <%= form_for @note, html: {class: "was-validated"} do |f| %>
      <div class="mt-3 mb-3">
        <%= f.text_field :title, value: @note.title, class: "form-control is-invalid" %>
        <div class="invalid-feedback">
          <%= @note.errors[:description].join if @note.errors[:description].any? %>
        </div>
      </div>

      <div class="mt-3 mb-3">
        <%= f.text_area :body, value: @note.body, class: "form-control is-invalid" %>
        <div class="invalid-feedback">
          <%= @note.errors[:description].join if @note.errors[:description].any? %>
        </div>
      </div>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>