<h1>Welcome <%=@user.first_name%>!</h1>
<div id="user-notes">
    <h2>Your Notes</h2>
    <div id="notes-list">
        <% if @notes.empty? %>
            <h4>You dont have any notes yet! Compose your first note <%= link_to 'here', new_note_path %>!</h4>
        <% end %>
        <% @notes.order('created_at DESC').each do |note| %>
            <div class="note"> 
                <h4 class="title"><%= note.title %> <span class="author-and-time">Created by <%= note.user.full_name %>, <%= note.time_created %></span></h4>
                <p><%= note.body %></p>
                <div class="buttons">
                    <%= button_to 'Edit Note', edit_note_path(note), method: :get, class: "bottom-buttons btn btn-primary" %>
                    <%= button_to 'Delete Note', note_path(note), method: :delete, class: "bottom-buttons btn btn-danger" %>
                </div>
            </div>
        <% end %>
    </div>
</div>